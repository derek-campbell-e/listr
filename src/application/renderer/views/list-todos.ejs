<%
  let checkmarkText = function(status){
    console.log("CURRENT STATUS", status);
    status = status || false;
    let text = "check_box_outline_blank";
    if(status){
      text = "check_box";
    }
    return text;
  };
%>
<div class='header'>
  <h1><%- list.meta.name %> <a href='#' class='listr-button tiny add-todo' data-list-id='<%- list.meta.listID %>'>Add Todo</a></h1>
</div>
<div class='content'>
  <div class='list-todos'>
    <table class='todo-table'>
      <%
        for(let todoID in list.todos){
          let todo = list.todos[todoID];
      %>
      <tr data-row-id='<%- todo.meta.id %>'>
        
        <td class='todo-checkbox-td'>
            <i class="material-icons todo-checkbox"><%- checkmarkText(todo.meta.isComplete) %></i>
          </td>
        <td class="todo-task" id='<%- todo.meta.id %>'>
          <div>
            <input type='text' class='todo-input' value='<%- todo.task %>'>
          </div>
        </td>
        <td class='todo-drag-td'>
          <i class="material-icons todo-drag">drag_handle</i>
        </td>
      </tr>
      <%
        }
      %>
    </table>
  </div> 
</div>
